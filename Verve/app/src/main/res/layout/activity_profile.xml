<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".View.ProfileActivity">

	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/guideline36"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.24"/>

	<ImageView
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@drawable/menubg2"
		android:id="@+id/imageView3"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/guideline36"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:scaleType="fitCenter"
		android:adjustViewBounds="false"
		android:cropToPadding="false"/>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/guideline37"
			app:layout_constraintTop_toTopOf="@+id/imageView3"
			android:id="@+id/linearLayout1"
	>

		<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				app:srcCompat="@mipmap/ic_menuwhite"
				android:background="@null"
				android:letterSpacing="0.1"
				android:id="@+id/imageButton"/>

		<TextView
				android:text="USERNAME"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:id="@+id/txt_username"
				android:gravity="center"
				android:letterSpacing="0.1"
				android:layout_weight="1"
				android:textColor="@android:color/white"
				android:textSize="15.5sp"/>

		<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@mipmap/ic_logout"
				android:id="@+id/btn_logout"
				android:onClick="option"
				android:background="@null"
				android:letterSpacing="0.1"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:scaleType="fitCenter"/>

	</LinearLayout>
	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/guideline37"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.06"/>

	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/guideline38"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.11"/>

	<android.support.constraint.Guideline
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/guideline39"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.29"/>

	<ImageView
			android:layout_width="135dp"
			android:layout_height="135dp"
			app:srcCompat="@drawable/btn_rounded_greenwhite"
			android:id="@+id/img_green"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/guideline39"
			app:layout_constraintTop_toTopOf="@+id/guideline38"
			android:scaleType="fitXY"
			android:cropToPadding="false"
			android:layout_marginBottom="8dp"/>

	<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			app:srcCompat="@mipmap/ic_edit"
			android:id="@+id/btn_edit"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/img_green"
			android:background="@null"
			android:scaleType="fitCenter"
			android:layout_marginEnd="130dp"
			android:layout_marginRight="130dp"
			app:layout_constraintBottom_toBottomOf="@+id/img_green"
			app:layout_constraintTop_toBottomOf="@+id/imageView3"
			android:layout_marginTop="14dp"/>

	<android.support.constraint.Guideline
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/guideline40"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.42"/>

	<LinearLayout
			android:orientation="vertical"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/guideline40"
			android:id="@+id/linearLayout2"
			app:layout_constraintTop_toBottomOf="@+id/img_green">

		<TextView
				android:text="Name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/txt_name"
				android:textSize="22dp"
				android:textStyle="bold"
				android:gravity="center"
				android:shadowColor="@android:color/darker_gray"
				android:shadowRadius="3"
				android:shadowDx="3"
				android:shadowDy="3"
				android:letterSpacing="0.05"
				android:textColor="@android:color/black"/>

		<TextView
				android:text="[Address or Location]"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/txt_address"
				android:gravity="center"
				android:autoSizeTextType="uniform"
				android:textColor="@color/Pale"/>

		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center">

			<TextView
					android:text="[Age]"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/txt_age"
					android:paddingRight="3dp"
					android:autoSizeTextType="uniform"
					android:textColor="@color/Pale"/>

			<TextView
					android:text="[Birth Date]"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/txt_birthday"
					android:paddingLeft="3dp"
					android:autoSizeTextType="uniform"
					android:textColor="@color/Pale"/>

		</LinearLayout>
		<TextView
				android:text="[E-mail Address]"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/txt_email"
				android:gravity="center"
				android:textColor="@color/Pale"/>

	</LinearLayout>

	<android.support.constraint.Guideline
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/guideline41"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.5"/>

	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			app:srcCompat="@mipmap/ic_patient"
			android:id="@+id/imageView8"
			app:layout_constraintEnd_toEndOf="@+id/img_green"
			app:layout_constraintStart_toStartOf="@+id/img_green"
			app:layout_constraintBottom_toBottomOf="@+id/img_green"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="@+id/img_green"/>

	<android.support.design.widget.TabLayout
			android:id="@+id/tabLayout"
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:tabBackground="@drawable/tab_selector_profile"
			app:tabIndicatorHeight="0dp"
			app:layout_constraintBottom_toTopOf="@+id/guideline41"
			app:layout_constraintTop_toTopOf="@+id/guideline40"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
			android:layout_marginBottom="8dp">

		<android.support.design.widget.TabItem
				android:id="@+id/tabItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="20dp"
				android:textSize="12sp"
				android:text="ALL POSTS"/>

		<android.support.design.widget.TabItem
				android:id="@+id/tabItem2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12sp"
				android:layout_marginRight="20dp"
				android:text="MEDICAL HISTORY"/>

		<android.support.design.widget.TabItem
				android:id="@+id/tabItem3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="20dp"
				android:textSize="12sp"
				android:text="CONSULTING DOCTORS"/>

	</android.support.design.widget.TabLayout>
	<android.support.v4.view.ViewPager
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:id="@+id/viewpager"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tabLayout"/>

	<!--BOTTOM NAVIGATION-->

	<ImageView
			android:layout_width="0dp"
			android:layout_height="0dp" app:srcCompat="@drawable/bottom_navi"
			android:id="@+id/imageView9" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:paddingLeft="-100dp"
			android:paddingRight="-100dp"
			android:paddingTop="-100dp"
			app:layout_constraintTop_toTopOf="@+id/guideline34" android:scaleType="fitXY"
			android:cropToPadding="false" android:adjustViewBounds="false"/>

	<android.support.constraint.Guideline
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/guideline34"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.91"/>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="0dp"
			android:layout_height="0dp" app:layout_constraintEnd_toEndOf="@+id/imageView9"
			app:layout_constraintStart_toStartOf="@+id/imageView9"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="@+id/imageView9" android:layout_marginTop="11dp"
			android:id="@+id/linearLayout" android:layout_marginBottom="2dp">

		<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:layout_weight="1">
			<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_profile_black"
					android:id="@+id/img_profile" android:layout_weight="1"/>
			<TextView
					android:text="Profile"
					android:gravity="center"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/textView"
					android:textSize="11sp"/>
		</LinearLayout>

		<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:layout_weight="1">
			<ImageView
					android:layout_width="match_parent"
					android:layout_marginTop="2dp"
					android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_find_black"
					android:id="@+id/img_find" android:layout_weight="1"/>
			<TextView
					android:text="Find a Doctor"
					android:gravity="center"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="11sp"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:layout_weight="1">
			<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_home_black"
					android:id="@+id/img_home" android:layout_weight="1"/>
			<TextView
					android:text="Home"
					android:gravity="center"

					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/textView7" android:textSize="11sp"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:layout_weight="1">
			<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_medicine_black"
					android:id="@+id/img_reminders" android:layout_weight="1"/>
			<TextView
					android:text="Reminders"
					android:gravity="center"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="11sp"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:layout_weight="1">
			<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_message_black"
					android:id="@+id/img_messages" android:layout_weight="1"/>
			<TextView
					android:text="Messages"
					android:gravity="center"

					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/textView6" android:textSize="11sp"/>
		</LinearLayout>
	</LinearLayout>

	<!--BOTTOM NAVIGATION-->



</android.support.constraint.ConstraintLayout>