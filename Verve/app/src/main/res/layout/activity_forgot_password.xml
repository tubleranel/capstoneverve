<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".View.SplashActivity">

	<android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
										  android:id="@+id/guideline17"
										  android:orientation="horizontal"
										  app:layout_constraintGuide_percent="0.46031746"/>
	<android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
										  android:id="@+id/guideline18"
										  android:orientation="horizontal" app:layout_constraintGuide_percent="0.57"/>
	<android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
										  android:id="@+id/guideline27"
										  android:orientation="vertical" app:layout_constraintGuide_percent="0.10"/>
	<android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
										  android:id="@+id/guideline28"
										  android:orientation="vertical" app:layout_constraintGuide_percent="0.90"/>
	<android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
										  android:id="@+id/guideline29"
										  android:orientation="horizontal" app:layout_constraintGuide_percent="0.72"/>
	<android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
										  android:id="@+id/guideline30"
										  android:orientation="horizontal" app:layout_constraintGuide_percent="0.825"/>

	<android.support.constraint.Guideline
			android:id="@+id/guideline3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.93"/>


	<ImageView
			android:id="@+id/bg_mci"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:scaleType="centerCrop"
			android:src="@drawable/bg_mci"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>

	<ImageView
			android:id="@+id/img_logo"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:padding="80dp"
			app:srcCompat="@drawable/vervelogo"
			app:layout_constraintBottom_toTopOf="@+id/guideline17" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"
			android:adjustViewBounds="true" android:cropToPadding="false"
			android:layout_marginTop="32dp" android:layout_marginBottom="60dp"
			android:layout_marginLeft="32dp"
			android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>
	<TextView
			android:text="FORGOT YOUR PASSWORD?"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:letterSpacing="0.05"
			android:shadowColor="@android:color/black"
			android:shadowDy="5"
			android:shadowDx="5"
			android:shadowRadius="5"
			android:id="@+id/txt_verve" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
			android:textColor="@color/White"
			android:textStyle="bold" android:textSize="20dp" android:layout_marginBottom="16dp"
			app:layout_constraintBottom_toTopOf="@+id/guideline17" app:layout_constraintTop_toBottomOf="@+id/img_logo"
			android:layout_marginTop="32dp"/>

	<View android:background="@color/Pale"
		  android:layout_width="0dp"
		  android:layout_height="1.5dp" app:layout_constraintEnd_toEndOf="parent"
		  android:layout_marginEnd="140dp" android:layout_marginRight="140dp"
		  app:layout_constraintStart_toStartOf="parent"
		  android:layout_marginLeft="140dp" android:layout_marginStart="140dp"
		  app:layout_constraintHorizontal_bias="0.4" android:layout_marginTop="8dp"
		  app:layout_constraintTop_toBottomOf="@+id/txt_verve" android:layout_marginBottom="8dp"
		  app:layout_constraintBottom_toTopOf="@+id/txt_verve2"/>

	<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/txt_verve2"
			android:gravity="center"
			android:shadowColor="@android:color/black"
			android:shadowDy="5"
			android:shadowDx="5"
			android:shadowRadius="5"
			app:layout_constraintStart_toStartOf="@+id/guideline27"
			android:textColor="@color/Pale"
			app:layout_constraintTop_toBottomOf="@+id/txt_verve"
			android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/guideline18"
			android:textSize="12.5dp" android:text="@string/forgot_password"
			app:layout_constraintEnd_toStartOf="@+id/guideline28" app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintVertical_bias="1.0" android:layout_marginTop="8dp"/>
	<Button
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:id="@+id/button" app:layout_constraintEnd_toStartOf="@+id/guideline28"
			app:layout_constraintStart_toStartOf="@+id/guideline27"
			app:layout_constraintTop_toTopOf="@+id/guideline18" android:layout_marginBottom="16dp"
			app:layout_constraintBottom_toTopOf="@+id/guideline29" android:layout_marginTop="32dp"
			android:background="@drawable/btn_rounded_blackopaque"/>
	<Button
			android:text="Submit"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:id="@+id/button2" app:layout_constraintEnd_toStartOf="@+id/guideline28"
			app:layout_constraintStart_toStartOf="@+id/guideline27"
			app:layout_constraintBottom_toTopOf="@+id/guideline30" android:layout_marginTop="16dp"
			app:layout_constraintTop_toTopOf="@+id/guideline29" android:background="@drawable/btn_rounded_green"
			android:textColor="@color/White" android:textStyle="bold" android:textSize="16sp"/>
	<ImageView
			android:layout_width="wrap_content"
			android:elevation="5dp"
			android:layout_height="0dp" app:srcCompat="@mipmap/ic_emailwhite"
			android:id="@+id/imageView2"
			app:layout_constraintStart_toStartOf="@+id/button" android:layout_marginLeft="14dp"
			android:layout_marginStart="14dp" app:layout_constraintTop_toTopOf="@+id/button"
			app:layout_constraintBottom_toBottomOf="@+id/button" android:layout_marginBottom="12dp"
			android:layout_marginTop="12dp" android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toStartOf="@+id/et_email" android:layout_marginRight="8dp"/>
	<EditText
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:inputType="textEmailAddress"
			android:ems="10"
			android:elevation="10dp"
			android:id="@+id/et_email"
			android:letterSpacing="0.06"
			android:hint="E-mail Address"
			android:background="@null"
			android:textColor="@android:color/white"
			android:textSize="16sp"
			android:textColorHint="@color/Pale"
			app:layout_constraintEnd_toEndOf="@+id/button"
			android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
			app:layout_constraintBottom_toBottomOf="@+id/button" app:layout_constraintTop_toTopOf="@+id/button"
			app:layout_constraintStart_toStartOf="@+id/button"
			android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

	<TextView
			android:id="@+id/click_login"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="10dp"
			android:layout_marginRight="10dp"
			android:gravity="right"
			android:text="LOGIN"
			android:onClick="option"
			android:textColor="@android:color/white"
			android:textSize="14sp"
			android:textStyle="bold"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toEndOf="@+id/click_signup"
			app:layout_constraintTop_toTopOf="@+id/guideline3"/>

	<TextView
			android:id="@+id/click_signup"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="10dp"
			android:layout_marginRight="10dp"
			android:text="SIGN UP"
			android:textColor="@android:color/white"
			android:textSize="14sp"
			android:textStyle="bold"
			android:onClick="option"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/guideline4"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/guideline3"/>

</android.support.constraint.ConstraintLayout>